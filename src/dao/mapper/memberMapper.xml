<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.MemberDao">

	<select id="selectMemberByMId" parameterType="String" resultType="member">
		select * 
		from member
		where m_id=#{mId}
	</select>	

	<select id="selectAuthoritiesByMNum" parameterType="int" resultType="String">
		select authority
		from authority
		where m_num=#{mNum}
	</select>
	
	<insert id="insertMember" parameterType="member">
		<selectKey order="BEFORE" keyProperty="mNum" resultType="int">
			select seq_member.nextval from dual
		</selectKey>
		insert into tbl_member
		(m_num, m_id, m_pw)
		values (#{mNum}, #{mId}, #{mPw})
	</insert>	
	
	<insert id="insertAuthority" parameterType="int">
		insert into authority
		(m_num)
		values (#{mNum})
	</insert>
	
</mapper>